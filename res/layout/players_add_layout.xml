<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/players_add_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/player_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/players_add_edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/players_add_txt_name"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/players_add_txt_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/players_add_edt_name"
        android:focusable="false"
        android:text="@string/player_number"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/players_add_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/cancel" />

    <EditText
        android:id="@+id/players_add_edt_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/players_add_txt_number"
        android:inputType="number" />

    <TextView
        android:id="@+id/players_add_txt_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/players_add_edt_number"
        android:text="@string/player_photo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/players_add_btn_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/players_add_txt_photo"
        android:contentDescription="@string/player_photo"
        android:src="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/players_add_btn_accpet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/players_add_btn_cancel"
        android:text="@string/accept" />

</RelativeLayout>